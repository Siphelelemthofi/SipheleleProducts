@page
@model SipheleleProducts.Web.Pages.Suppliers.GetAllSuppliersModel
@{
}
<div class="container-fluid">
    <br />

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">


            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h6 class="m-0 font-weight-bold text-primary">List Of Supplier</h6>
                <h6 class="m-0 font-weight-bold text-primary">Click on search to search Item </h6>
                <a href="/Suppliers/AddSupplier" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                    <i class="fa fa-plus fa-sm text-white-50"></i> Add Supplier
                </a>
            </div>



        </div>
        <div class="card-body">



            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                    <thead>
                        <tr>
                            <th>Company Name</th>
                            <th>Contact Name</th>
                            <th>Contact Title</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>Region</th>
                            <th>Postal Code</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.getAllSuppliersViewModel.Count > 0)
                        {
                            @foreach (var item in Model.getAllSuppliersViewModel)
                            {
                                <tr>
                                    <td>@item.CompanyName</td>
                                    <td>@item.ContactName</td>
                                    <td>@item.ContactTitle</td>
                                    <td>@item.Address</td>
                                    <td>@item.City</td>
                                    <td>@item.Region</td>
                                    <td>@item.PostalCode</td>

                                    <td>
                                        <a href="/Suppliers/GetSupplierDetailsById?SupplierId=@item.SupplierId" class="btn btn-success btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="View Details for supplier">
                                            <i class="fa fa-eye"></i>
                                        </a>

                                        <a href="/Suppliers/UpdateSupplier?SupplierId=@item.SupplierId" class="btn btn-primary btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="Edit supplier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/Suppliers/ConfirmationDeleteOfSuppliers?SupplierId=@item.SupplierId" class="btn btn-danger btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="Remove supplier">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>


        </div>
    </div>

</div>
<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>