@page
@model SipheleleProducts.Web.Pages.Products.GetAllProductsModel
@{
}
 <!-- Begin Page Content -->
                <div class="container-fluid">
<br />

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                        

              <div class="d-sm-flex align-items-center justify-content-between mb-4">
                 <h6 class="m-0 font-weight-bold text-primary">List Of Products</h6>
                 <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                    <i class="fas fa-download fa-sm text-white-50"></i> Add Product
                </a>
            </div>



                        </div>
                        <div class="card-body">
        


                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
               
                            <thead>
                                <tr>
                                     <th>Product Name</th>
                                     <th>Discontinued</th>
                                     <th>QuantityPerUnit</th>
                                     <th>UnitPrice</th>
                                     <th>UnitInStock</th>
                                     <th>ReorderLevel</th>
                                     <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                        @if (Model.getAllProductViewModel.Count > 0)
                        {
                            @foreach (var item in Model.getAllProductViewModel)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Discontinued</td>
                                    <td>@item.QuantityPerUnit</td>
                                    <td>@item.UnitPrice</td>
                                    <td>@item.UnitInStock</td>
                                    <td>@item.ReorderLevel</td>
                                    <td>
                                        <a href="#" class="btn btn-danger btn-circle btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                            </tbody>
                   
                </table>
                    </div>
                 
         
        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->
