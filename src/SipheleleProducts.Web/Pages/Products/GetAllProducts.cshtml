@page
@model SipheleleProducts.Web.Pages.Products.GetAllProductsModel
@{
}
 <!-- Begin Page Content -->
                <div class="container-fluid">
<br />

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                        

              <div class="d-sm-flex align-items-center justify-content-between mb-4">
                 <h6 class="m-0 font-weight-bold text-primary">List Of Products  </h6>
                <h6 class="m-0 font-weight-bold text-primary">Click on serach to search Item </h6>
                <a href="/Products/AddProduct" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                    <i class="fa fa-plus fa-sm text-white-50"></i> Add Product
                </a>
            </div>
                        </div>
                        <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
               
                            <thead>
                                <tr>
                                     <th>Product Image</th>
                                     <th>Product Name</th>
                                     <th>Category Name</th>
                                     <th>CompanyName</th>
                                     <th>Unit Price</th>
                                     <th>Unit In Stock</th>
                                     <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                        @if (Model.getAllProductViewModel.Count > 0)
                        {
                            @foreach (var item in Model.getAllProductViewModel)
                            {
                                <tr>
                                    <td><img src="@item.ImagePath" width="100" height="100"></td>
                                    <td>@item.ProductName</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.CompanyName</td>
                                    <td>@item.UnitPrice</td>
                                    <td>@item.UnitInStock</td>
                                    <td>
                                        <a href="/Products/GetProductDetailsById?ProductId=@item.ProductId" class="btn btn-success btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="View Details Product">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a href="/Products/UpdateProduct?ProductId=@item.ProductId" class="btn btn-primary btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="View Details Product">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/Products/ConfirmationDeleteOfProducts?ProductId=@item.ProductId" class="btn btn-danger btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="Remove">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                            </tbody>
                   
                </table>
                    </div>
                 
         
        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip({
            placement: 'top'
        });
    });
</script>